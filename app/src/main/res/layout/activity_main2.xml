<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Dashboard" />



    <ImageView
        android:id="@+id/iv1"
        android:layout_below="@id/tv1"
        android:layout_marginTop="30dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_action_dp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv1"
        android:layout_below="@id/tv1"
        android:text="Name:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv1"
        android:layout_below="@id/tv2"
        android:text="Enrollment Number:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv1"
        android:layout_below="@id/tv3"
        android:text="Department:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>


    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@+id/cv7"
        android:background="#ffffff"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_below="@id/iv1"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Attendance"
            android:textSize="22dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/attendance"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/cv1"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Time Table"
            android:textSize="22dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/timetable" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/cv2"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Exam Marks"
            android:textSize="22dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/exammarks" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/cv3"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Remarks"
            android:textSize="22dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/remarks" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv5"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/cv4"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Syllabus"
            android:textSize="22dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/syllabus" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv6"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/cv5"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Event Calender"
            android:textSize="22dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/eventcalender" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv7"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/cv6"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Fees Payment"
            android:textSize="22dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/feespayment" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>